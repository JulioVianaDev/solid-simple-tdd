root = true

# For all files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 30

# Match specific files (e.g., JSON files)
[*.json]
indent_size = 4

# Match markdown files
[*.md]
max_line_length = off
